<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="OptionsImagesTheme">
        <item name="android:layout_width">@dimen/drawing_options_width</item>
        <item name="android:layout_height">@dimen/drawing_options_height</item>
        <item name="android:adjustViewBounds">true</item>
        <item name="android:padding">@dimen/drawing_options_padding</item>
        <item name="android:layout_margin">@dimen/drawing_options_margin</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:background">?attr/selectableItemBackgroundBorderless</item>
    </style>

    <style name="PreviewImagesTheme">
        <item name="android:layout_width">@dimen/drawing_options_width</item>
        <item name="android:layout_height">@dimen/drawing_options_height</item>
        <item name="android:adjustViewBounds">true</item>
        <item name="android:padding">@dimen/preview_options_padding</item>
        <item name="android:layout_margin">@dimen/drawing_options_margin</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:background">?attr/selectableItemBackgroundBorderless</item>
    </style>

    <style name="FabTheme">
        <item name="android:layout_width">@dimen/fab_width</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/fab_margin</item>
        <item name="android:foreground">?attr/selectableItemBackgroundBorderless</item>
    </style>


</resources>
