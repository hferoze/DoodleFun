<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black_translucent">
       <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
           android:id="@+id/image_container"
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:layout_margin="8dp">

              <ImageView
                  android:id="@+id/image_widget"
                  android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:scaleType="centerCrop"
                  android:adjustViewBounds="true"
                  android:contentDescription="@string/content_desc_widget_image"/>

              <TextView
                  android:id="@+id/no_doodle_available_text_view"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_gravity="center"
                  android:textColor="@color/white"
                  android:textSize="@dimen/widget_text_size_no_doodle" />

              <FrameLayout
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_gravity="top"
                  android:alpha="0.4"
                  android:background="@color/black_translucent">
                     <TextView
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:textSize="@dimen/widget_text_size_title"
                         android:fontFamily="sans-serif-thin"
                         android:text="@string/app_name"
                         android:layout_gravity="center"
                         android:textColor="@color/black"/>
              </FrameLayout>
       </FrameLayout>
</RelativeLayout>